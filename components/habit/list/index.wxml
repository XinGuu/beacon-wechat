<view>
  <view
    class="list-container"
    bindtap="habitListTap"
    data-id="{{item.id}}"
    wx:for="{{list}}"
    wx:key="id"
    wx:for-index="idx"
    wx:for-item="item"
  >
    <view class="btn-box" data-type="increase">increase</view>
    <view class="content-box" data-type="item">{{item.name}}</view>
    <view class="btn-box" data-type="decrease">decrease</view>
  </view>
</view>